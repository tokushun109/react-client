{
    "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
    "globals": {
        "React": "readonly",
        "JSX": "readonly"
    },
    "rules": {
        "no-unused-vars": [
            1,
            {
                "args": "after-used",
                "argsIgnorePattern": "^_",
                // _だけの時はwarningを出さない
                "varsIgnorePattern": "^_$"
            }
        ],
        "no-console": [
            "error",
            {
                "allow": ["error"]
            }
        ]
    },
    "ignorePatterns": ["dummies"]
}
